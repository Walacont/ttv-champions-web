<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#60a5fa</color>
    <color name="colorPrimary">#1e40af</color>
    <color name="colorPrimaryDark">#1e3a5f</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <string name="app_name">SC Champions</string>
    <string name="custom_url_scheme">de.scchampions.app</string>
    <string name="package_name">de.scchampions.app</string>
    <string name="title_activity_main">SC Champions</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>