{
    "name": "sc-champions",
    "version": "3.0.2",
    "description": "SC Champions - Digitales Sport-Training & Wettkampfsystem",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "cap:sync": "vite build && npx cap sync",
        "cap:copy": "npx cap copy",
        "cap:open:android": "npx cap open android",
        "cap:open:ios": "npx cap open ios",
        "cap:run:android": "npx cap run android",
        "cap:run:ios": "npx cap run ios",
        "cap:build:android": "npx cap sync android && cd android && ./gradlew assembleRelease",
        "android": "npx cap sync android && npx cap open android",
        "ios": "npx cap sync ios && npx cap open ios",
        "icons:ios": "node scripts/generate-ios-icons.js"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.22",
        "firebase-admin": "^13.6.0",
        "firebase-tools": "^15.0.0",
        "happy-dom": "^20.0.10",
        "postcss": "^8.5.6",
        "prettier": "^3.4.2",
        "sharp": "^0.34.5",
        "tailwindcss": "^4.1.17",
        "vitest": "^4.0.8"
    },
    "dependencies": {
        "@capacitor/android": "^7.4.4",
        "@capacitor/app": "^7.1.0",
        "@capacitor/cli": "^7.4.4",
        "@capacitor/core": "^7.4.4",
        "@capacitor/haptics": "^7.0.2",
        "@capacitor/ios": "^7.4.4",
        "@capacitor/keyboard": "^7.0.3",
        "@capacitor/preferences": "^7.0.2",
        "@capacitor/push-notifications": "^7.0.3",
        "@capacitor/splash-screen": "^7.0.3",
        "@capacitor/status-bar": "^7.0.3",
        "@supabase/supabase-js": "^2.86.0",
        "@tailwindcss/postcss": "^4.1.17",
        "@vitejs/plugin-vue": "^6.0.2",
        "firebase-functions": "^7.0.0",
        "i18next": "^25.7.2",
        "i18next-http-backend": "^3.0.2",
        "pinia": "^3.0.4",
        "resend": "^6.6.0",
        "vite": "^7.2.6",
        "vue": "^3.5.25",
        "vue-router": "^4.6.3"
    }
}
